{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "@beta-lyfe/docs-api",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"exports": "./src/index.ts",
	"scripts": {
		"dev": "vite --port 3002",
		"compile": "tsp compile . --emit @typespec/openapi3",
		"compile:dev": "pnpm compile --watch",
		"lint": "tsc",
		"build": "pnpm compile && pnpm generate:schema && pnpm lint && vite build",
		"test": "pnpm generate:schema && dotenv -- vitest run",
		"generate:schema": "openapi-zod-client ./src/spec/openapi.yaml --output ./schema.ts --export-schemas --no-with-alias"
	},
	"devDependencies": {
		"@beta-lyfe/api": "workspace:^",
		"@beta-lyfe/docs-api": "workspace:^",
		"@faker-js/faker": "^9.5.0",
		"@t3-oss/env-core": "^0.9.2",
		"@types/node": "^22.7.2",
		"@types/react": "^18.3.9",
		"@types/react-dom": "^18.3.0",
		"@typespec/compiler": "^0.60.1",
		"@typespec/http": "^0.60.0",
		"@typespec/json-schema": "^0.65.0",
		"@typespec/openapi3": "^0.60.0",
		"@typespec/rest": "^0.60.0",
		"@vitejs/plugin-react-swc": "^3.7.0",
		"@zodios/core": "^10.9.6",
		"ajv": "^8.17.1",
		"ajv-formats": "^3.0.1",
		"concurrently": "^9.1.2",
		"date-fns": "^3.3.1",
		"dotenv-cli": "^8.0.0",
		"json-schema-to-ts": "^3.1.1",
		"openapi-ts-json-schema": "^0.12.2",
		"openapi-zod-client": "^1.18.3",
		"tsx": "^4.19.2",
		"typed-openapi": "^0.10.1",
		"vite": "^5.4.8",
		"vitest": "^3.0.5",
		"zod": "^3.23.8",
		"zod-validation-error": "^3.4.0"
	},
	"dependencies": {
		"@scalar/api-reference": "^1.25.21",
		"@scalar/api-reference-react": "^0.3.97",
		"react": "^18.3.1",
		"react-dom": "^18.3.1"
	}
}
